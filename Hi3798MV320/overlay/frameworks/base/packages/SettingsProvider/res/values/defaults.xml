<resources>
    <!-- Default for Settings.Secure.SHOW_IME_WITH_HARD_KEYBOARD -->
    <bool name="def_show_ime_with_hard_keyboard">true</bool>
    <bool name="def_device_provisioned">true</bool>
    <!-- Tv device do not support gps location and we remove the default location provider allowed.
         Furthermore we also disallowed feature:location.gps -->
    <string name="def_location_providers_allowed" translatable="false"></string>
    <!-- set the timeout to 30 minutes -->
    <integer name="def_screen_off_timeout">864000000</integer>
    <!-- allready defined in device/google/atv -->
    <bool name="def_lockscreen_disabled">true</bool>
    <bool name="def_stay_on_while_plugged_in">true</bool>

    <add-resource type="fraction" name="def_animator_duration_scale"/>
    <fraction name="def_animator_duration_scale">50%</fraction>
    <!--enable IPv6 auto connection as default-->
    <add-resource type="bool" name="def_ethernet_ipv6_auto_valid"/>
    <bool name="def_ethernet_ipv6_auto_valid">true</bool>
</resources>
